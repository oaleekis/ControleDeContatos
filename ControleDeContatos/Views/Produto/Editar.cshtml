@model ProdutoModel
@{
    ViewData["Title"] = "Editar produto";
}
<h1 class="display-4">Editar produto</h1>

<form asp-controller="Produto" asp-action="Alterar" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do produto">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>
    <div class="form-group">
        <label for="precoCompra">Preço de Compra</label>
        <input type="text" asp-for="PrecoCompra" class="form-control" placeholder="Digite o preço de compra">
        @Html.ValidationMessageFor(x => x.PrecoCompra)
    </div>
    <div class="form-group">
        <label for="precoVenda">Preço de Venda</label>
        <input type="text" asp-for="PrecoVenda" class="form-control" placeholder="Digite o preço de venda">
        @Html.ValidationMessageFor(x => x.PrecoVenda)
    </div>
    <div class="form-group">
        <label for="quantidade">Quantidade</label>
        <input type="text" asp-for="Quantidade" class="form-control" placeholder="Digite a quantidade">
        @Html.ValidationMessageFor(x => x.Quantidade)
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Alterar</button>
    <a class="btn btn-secondary" asp-controller="Produto" asp-action="Index" role="button">Voltar</a>
</form>